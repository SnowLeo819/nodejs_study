<%- include("include/header.ejs") -%>
  <div class="titleBox">
    <h2>MOVEI List!</h2>
  </div>
  <div class="searchBox">
    <form action="/search" method="GET">
      <input type="text" name="search_word">
      <button><span class="material-icons-two-tone">search</span></button>
    </form>
  </div>
  <div class="listBox">
    <ul>
      <%  movieList.forEach((item,idx)=>{ %>
      <li>
        <a href="/detail/<%= item._id %>" data-id="<%= item._id %>">
          <div class="poster">
            <img src="<%= item.poster %>">
          </div>
          <dl>
            <dt>제목</dt>
            <dd><p class="todo"><%= item.title %></p></dd>
          </dl>
          <dl>
            <dt>개봉일</dt>
            <dd><p class="todo"><%= item.date %></p></dd>
          </dl>
          <dl>
            <dt>줄거리</dt>
            <dd><p class="todo"><%= item.desc %></p></dd>
          </dl>
          <dl>
            <dt>평점</dt>
            <dd><p class="todo"><%= item.point %></p></dd>
          </dl>
        </a>
      </li>
      <% }) %>
    </ul>
  </div>
<%- include("include/footer.ejs") -%>