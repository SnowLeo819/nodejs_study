<%- include("include/header.ejs") -%>
  <div class="titleBox">
    <h2>ToDo List!</h2>
  </div>
  <div class="searchBox">
    <form action="/search" method="GET">
      <input type="text" name="search_word">
      <button><span class="material-icons-two-tone">search</span></button>
    </form>
  </div>
  <div class="listBox">
    <ul>
      <%  todoList.forEach((item,idx)=>{ %>
      <li>
        <a href="/detail/<%= item._id %>" data-id="<%= item._id %>">
          <dl>
            <dt>No.<%= item._id %></dt>
            <dd>
              <p class="todo"><%= item.title %></p>
              <span class="date"><%= item.date %></span>
            </dd>
          </dl>
        </a>
      </li>
      <% }) %>
    </ul>
  </div>
  <div class="btns">
    <a class="btn" href="/insert">글쓰기</a>
  </div>
<%- include("include/footer.ejs") -%>